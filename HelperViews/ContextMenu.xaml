<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIDesigner.HelperViews.ContextMenu"
             BackgroundColor="Black">
    <VerticalStackLayout MinimumHeightRequest="200">
        <CollectionView ItemsSource="{Binding ActionList}" x:Name="PropertySource">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <ContentView Content="{Binding View}" Margin="0" Padding="0">
                        <ContentView.Triggers>
                            <Trigger TargetType="ContentView" Property="IsPointerOver" Value="True">
                                <Setter Property="BackgroundColor" Value="Gray" />
                            </Trigger>
                        </ContentView.Triggers>
                        <ContentView.Content Margin="0" Padding="0">
                            <Label TextColor="White" HorizontalOptions="Start" VerticalOptions="Center"/>
                        </ContentView.Content>
                    </ContentView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentView>